{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ProtoScript2",
  "scopeName": "source.protoscript2",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#preprocessor" },
    { "include": "#declarations" },
    { "include": "#modules" },
    { "include": "#identifiers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.protoscript2", "match": "//.*$" },
        {
          "name": "comment.block.protoscript2",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.protoscript2",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.protoscript2", "match": "\\\\." }
          ]
        },
        {
          "name": "string.quoted.single.protoscript2",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "name": "constant.character.escape.protoscript2", "match": "\\\\." }
          ]
        }
      ]
    },
    "preprocessor": {
      "patterns": [
        {
          "name": "meta.preprocessor.define.protoscript2",
          "match": "^(\\s*)(#\\s*)(define)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "2": { "name": "punctuation.definition.preprocessor.protoscript2" },
            "3": { "name": "keyword.control.preprocessor.protoscript2" },
            "4": { "name": "entity.name.function.preprocessor.protoscript2" }
          }
        },
        {
          "name": "meta.preprocessor.include.protoscript2",
          "match": "^(\\s*)(#\\s*)(include)\\s*(\"[^\"]+\"|<[^>]+>)",
          "captures": {
            "2": { "name": "punctuation.definition.preprocessor.protoscript2" },
            "3": { "name": "keyword.control.preprocessor.protoscript2" },
            "4": { "name": "string.quoted.other.include.protoscript2" }
          }
        },
        {
          "name": "meta.preprocessor.protoscript2",
          "begin": "^(\\s*)(#\\s*)(include|define|ifdef|ifndef|if|elif|else|endif|undef|error|line|pragma)\\b",
          "beginCaptures": {
            "2": { "name": "punctuation.definition.preprocessor.protoscript2" },
            "3": { "name": "keyword.control.preprocessor.protoscript2" }
          },
          "end": "$",
          "patterns": [
            { "include": "#strings" },
            { "include": "#constants" },
            { "include": "#numbers" },
            { "include": "#operators" }
          ]
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.declaration.prototype.protoscript2",
          "match": "\\b(prototype)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.protoscript2" },
            "2": { "name": "entity.name.type.prototype.protoscript2" }
          }
        },
        {
          "name": "meta.declaration.prototype.inherit.protoscript2",
          "match": "\\b(prototype)\\s+[A-Za-z_][A-Za-z0-9_]*\\s*(:)\\s*([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.protoscript2" },
            "2": { "name": "keyword.operator.inheritance.protoscript2" },
            "3": { "name": "entity.other.inherited-class.protoscript2" }
          }
        },
        {
          "name": "meta.declaration.function.protoscript2",
          "match": "\\b(function)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.function.protoscript2" },
            "2": { "name": "entity.name.function.protoscript2" }
          }
        },
        {
          "name": "meta.declaration.group.protoscript2",
          "match": "\\b(int|float|bool|byte|string|glyph)\\s+(group)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "storage.type.protoscript2" },
            "2": { "name": "keyword.declaration.protoscript2" },
            "3": { "name": "entity.name.type.group.protoscript2" }
          }
        },
        {
          "name": "meta.import.protoscript2",
          "match": "\\b(import)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.control.import.protoscript2" },
            "2": { "name": "entity.name.module.protoscript2" }
          }
        }
      ]
    },
    "modules": {
      "patterns": [
        {
          "name": "support.class.module.protoscript2",
          "match": "\\b(Io|Fs|Sys|JSON|Math|Debug|Time|TimeCivil|RegExp)\\b"
        },
        {
          "name": "support.type.builtin.protoscript2",
          "match": "\\b(Object|Exception|RuntimeException|CivilDateTime|TextFile|BinaryFile|PathInfo|PathEntry|Dir|Walker|ProcessEvent|ProcessResult|JSONValue|RegExpMatch)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "meta.member.call.protoscript2",
          "match": "(\\.)\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "punctuation.accessor.dot.protoscript2" },
            "2": { "name": "entity.name.function.member.protoscript2" }
          }
        },
        {
          "name": "meta.member.access.protoscript2",
          "match": "(\\.)\\s*([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "punctuation.accessor.dot.protoscript2" },
            "2": { "name": "variable.other.member.protoscript2" }
          }
        },
        {
          "name": "meta.function.call.protoscript2",
          "match": "(?<!\\.)\\b(?!if\\b|else\\b|for\\b|of\\b|in\\b|while\\b|do\\b|switch\\b|case\\b|default\\b|break\\b|continue\\b|return\\b|try\\b|catch\\b|finally\\b|throw\\b|import\\b|prototype\\b|sealed\\b|function\\b|const\\b|var\\b|group\\b|internal\\b)([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.call.protoscript2" }
          }
        },
        {
          "name": "entity.name.type.identifier.protoscript2",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.protoscript2",
          "match": "\\b(if|else|for|of|in|while|do|switch|case|default|break|continue|return|try|catch|finally|throw|import)\\b"
        },
        {
          "name": "keyword.declaration.protoscript2",
          "match": "\\b(prototype|sealed|function|const|var|group|internal)\\b"
        },
        {
          "name": "variable.language.protoscript2",
          "match": "\\b(self|super)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.protoscript2",
          "match": "\\b(int|float|bool|byte|string|glyph|list|map|slice|view|void)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.protoscript2",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.protoscript2",
          "match": "\\b(?:0[xX][0-9a-fA-F]+|0[bB][01]+|\\d+\\.\\d+(?:[eE][+-]?\\d+)?|\\d+(?:[eE][+-]?\\d+)?)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.protoscript2",
          "match": "(\\+=|-=|\\*=|/=|=)"
        },
        {
          "name": "keyword.operator.comparison.protoscript2",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.protoscript2",
          "match": "(\\|\\||&&|!)"
        },
        {
          "name": "keyword.operator.arithmetic.protoscript2",
          "match": "(\\+\\+|--|\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.bitwise.protoscript2",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.ternary.protoscript2",
          "match": "(\\?|:)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.protoscript2",
          "match": ","
        },
        {
          "name": "punctuation.terminator.statement.protoscript2",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.dot.protoscript2",
          "match": "\\."
        },
        {
          "name": "punctuation.section.group.begin.protoscript2",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.group.end.protoscript2",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.parens.begin.protoscript2",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.protoscript2",
          "match": "\\)"
        },
        {
          "name": "punctuation.section.brackets.begin.protoscript2",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.protoscript2",
          "match": "\\]"
        }
      ]
    }
  }
}
